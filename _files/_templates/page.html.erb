<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <meta content="IE=edge" http-equiv="X-UA-Compatible">
  <meta content="width=device-width, initial-scale=1.0" name="viewport">
  <title><%= distro %> <%= version %> | <%= [group_title, subgroup_title, topic_title].compact.join(' | ') %></title>

  <!-- Google Analytics -->
  <script async src="https://www.googletagmanager.com/gtag/js?id=UA-36157926-3"></script>
  
  <script>
    window.dataLayer = window.dataLayer || [];
    function gtag(){dataLayer.push(arguments);}
    gtag('js', new Date());

    gtag('config', 'UA-36157926-3');
  </script>

  <%= render("_templates/_css.html.erb", :css_path => css_path) %>

  <link href="<%= File.join(images_path, "favicon.ico") %>" rel="shortcut icon">
  <!--[if IE]><link rel="shortcut icon" href="<%= File.join(images_path, "favicon.ico") %>"><![endif]-->
  
  <meta content="AsciiBinder" name="application-name">
</head>
<body>

<%= render("_templates/_topnav.html.erb", :site_home_path => site_home_path, :images_path => images_path) %>

<section id="page" class="container-fluid page" >
  <div class="row">
    <div class="col-md-12 col-lg-3 col-xl-2 col-sidebar" id="col-sidebar" >
      <div class="row">

        <div class="col-md-12 col-sidebar-close">
          <a href="#" id="sidebar-close"><img src="data:image/svg+xml,%3Csvg width='12' height='12' viewBox='0 0 12 12' fill='none' xmlns='http://www.w3.org/2000/svg' aria-hidden='true'%3E%3Cpath d='M1 1L6 6M11 11L6 6M6 6L11 1M6 6L1 11' stroke='black' stroke-width='2' stroke-linecap='round'%3E%3C/path%3E%3C/svg%3E" /> Close</a>
        </div>
        
        <%= render("_templates/_search.html.erb") %>
        
        <%= render("_templates/_nav.html.erb", :navigation => navigation, :group_id => group_id, :topic_id => topic_id, :subgroup_id => subgroup_id, :subtopic_shim => subtopic_shim) %>
                        
      </div>
    </div>   
    <div class="col-md-12 col-lg-9 col-xl-10 col-page" > 
      <div class="row justify-content-between row-page-menu">
        
        <div class="col col-sm-8 col-breadcrumb" id="breadcrumb" >
          
          <nav class="toggle-sidebar d-lg-none" aria-label="toggle-sidebar">
            <button class="navbar-toggler" id="toggle-sidebar" type="button" data-toggle="offcanvus" data-target="#col-sidebar" aria-controls="docsite-navbar-collapse" aria-expanded="false" aria-label="Toggle navigation">
              <span class="navbar-toggler-icon"></span>
            </button> 
          </nav>
          <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
              <li><a href="<%= site_home_path %>"><%= site_name %></a></li>
              <li class="breadcrumb-item"><%= breadcrumb_root %></li>
              <li class="breadcrumb-item"><%= breadcrumb_group %></li>
                <%= breadcrumb_subgroup_block %>
              <li class=" breadcrumb-item hidden-xs active"><%= breadcrumb_topic %></li>
            </ol>
          </nav>

        </div>
        <div class="col col-4 col-sm-3 col-edit-github"> 
          <%= "<a href=\"https://github.com/twistlock/docs/tree/master/admin_guide/" + repo_path + "\"  target='_blank' class='btn-link'>Edit on GitHub</a>" %>
        </div>
      
      </div>
      
      <div class="row">
        <div class="col col-page-content main">
          <div class="page-header">
            <h2><%= article_title %></h2>
          </div>
          <%= content %>
        </div>
      </div>
      
    </div>     
  </div>  
</section> 

<%= render("_templates/_footer.html.erb") %>
  
  
   <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
   <!-- <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script> -->
   <script src="<%= File.join(javascripts_path, "jquery.min.js") %>" type="text/javascript"></script>
   
   <!-- Latest compiled and minified JavaScript -->
   <!-- <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script> -->
   <script src="<%= File.join(javascripts_path, "bootstrap.bundle.js") %>" type="text/javascript"></script> 
   <script src="<%= File.join(javascripts_path, "bootstrap-dialog.min.js") %>" type="text/javascript"></script> 
   <script src="<%= File.join(javascripts_path, "algoliasearch.min.js") %>" type="text/javascript"></script>
   <script src="<%= File.join(javascripts_path, "algoliasearch.helper.min.js") %>" type="text/javascript"></script>
   <script src="<%= File.join(javascripts_path, "tw-search.js") %>" type="text/javascript"></script>
   

  <script type="text/javascript">
    twSearch();
  </script>
  
  <script type="text/javascript">


    $(document).ready(function() {
      $('#toggle-sidebar').click(function() {
        $('#col-sidebar').addClass('active'); 
      });
    });
    
    
    $(document).ready(function() {
      $('#sidebar-close').click(function() {
        $('#col-sidebar').removeClass('active');
      });
    }); 


  </script>


</body>
</html>
